<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">


    <TextView
        android:id="@+id/pr_textView_nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/pr_playerName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.1"/>

    <EditText
        android:id="@+id/pr_plainText_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_textView_nameLabel"
        app:layout_constraintBottom_toTopOf="@id/pr_textView_levelLabel"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0"/>

    <TextView
        android:id="@+id/pr_textView_levelLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/black"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.05"
        android:autoSizeTextType="uniform"
        android:text="@string/levelLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/pr_textView_idLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/black"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.05"
        android:text="@string/pr_id"
        android:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.35"/>

    <ImageView
        android:id="@+id/pr_imageView_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tmp_status_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/pr_textView_north"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.05"
        android:text="55"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/pr_imageView_status"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/pr_imageView_status"
        app:layout_constraintEnd_toEndOf="@id/pr_imageView_status"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/pr_textView_west"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="10"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/pr_imageView_status"
        app:layout_constraintEnd_toStartOf="@id/pr_imageView_status"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pr_imageView_status"
        app:layout_constraintWidth_percent="0.1" />

    <TextView
        android:id="@+id/pr_textView_south"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.05"
        android:text="55"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/pr_imageView_status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/pr_imageView_status"
        app:layout_constraintEnd_toEndOf="@id/pr_imageView_status"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/pr_textView_east"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="10"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/pr_imageView_status"
        app:layout_constraintStart_toEndOf="@id/pr_imageView_status"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pr_imageView_status" />

    <TextView
        android:id="@+id/pr_textView_level"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:autoSizeTextType="uniform"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/pr_textView_levelLabel"
        app:layout_constraintTop_toTopOf="@id/pr_textView_levelLabel"
        app:layout_constraintHorizontal_bias="0.8"/>

    <TextView
        android:id="@+id/pr_textView_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.05"
        android:text="3324p"
        android:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/pr_textView_idLabel"
        app:layout_constraintTop_toTopOf="@id/pr_textView_idLabel"
        app:layout_constraintHorizontal_bias="0.8"/>

    <Button
        android:id="@+id/pr_button_editName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="編集"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/light_blue"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintBottom_toBottomOf="@id/pr_plainText_name"
        app:layout_constraintTop_toTopOf="@id/pr_plainText_name"
        app:layout_constraintStart_toEndOf="@id/pr_plainText_name"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>